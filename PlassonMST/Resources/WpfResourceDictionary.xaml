<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:viewModels="clr-namespace:PlassonMST.ViewModels"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
					xmlns:views="clr-namespace:PlassonMST.Views">
	<Style x:Key="FrameworkElementBase" TargetType="{x:Type FrameworkElement}">
		<Setter Property="Margin" Value="3"/>
	</Style>
	<Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource FrameworkElementBase}"/>
	<Style TargetType="{x:Type Image}" BasedOn="{StaticResource FrameworkElementBase}">
		<Setter Property="SnapsToDevicePixels" Value="True"/>
		<Setter Property="RenderOptions.EdgeMode" Value="Aliased"/>
	</Style>
	<Style TargetType="{x:Type ListBox}" BasedOn="{StaticResource FrameworkElementBase}"/>
	<Style TargetType="{x:Type Label}" BasedOn="{StaticResource FrameworkElementBase}"/>
	<Style TargetType="{x:Type Button}" BasedOn="{StaticResource FrameworkElementBase}"/>
	<Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource FrameworkElementBase}">
		<Setter Property="VerticalAlignment" Value="Center"/>
	</Style>
</ResourceDictionary>